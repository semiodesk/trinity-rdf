<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  
  <PropertyGroup>
    <CoreCompileDependsOn>$(CoreCompileDependsOn);GenerateOntologies</CoreCompileDependsOn>
  </PropertyGroup>
  <UsingTask TaskName="GenerateOntology" AssemblyFile="$(MSBuildThisFileDirectory)../../tools/net40/OntologyGenerator.exe" />
  <UsingTask TaskName="CilGeneratorTask" AssemblyFile="$(MSBuildThisFileDirectory)../../tools/net40/cilg.exe" />
  <UsingTask TaskName="DeployOntology" AssemblyFile="$(MSBuildThisFileDirectory)../../tools/net40/OntologyDeployment.exe" />
  
  <Target Name="GenerateOntologies">
    <GenerateOntology ProjectPath="$(ProjectPath)" IntermediatePath="$(IntermediateOutputPath)" />
    <ItemGroup>
      <Compile Include="$(IntermediateOutputPath)Ontologies.g.cs" />
    </ItemGroup>
  </Target>
  
  <Target Name="CilGeneratorTarget" AfterTargets="Build">
    <CilGeneratorTask TargetFile="$(TargetDir)/$(TargetName)$(TargetExt)" />
	<DeployOntology ProjectPath="$(ProjectPath)" />
  </Target>


</Project>