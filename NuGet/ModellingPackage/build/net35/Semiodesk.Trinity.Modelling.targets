<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  
  <PropertyGroup>
    <CoreCompileDependsOn>$(CoreCompileDependsOn);GenerateOntologies</CoreCompileDependsOn>
  </PropertyGroup>
  
  <UsingTask TaskName="CilGeneratorTask" AssemblyFile="$(MSBuildThisFileDirectory)../../tools/net35/cilg.exe" />
  <UsingTask TaskName="GenerateOntology" AssemblyFile="$(MSBuildThisFileDirectory)../../tools/net35/OntologyGenerator.exe" />
  <UsingTask TaskName="DeployOntology" AssemblyFile="$(MSBuildThisFileDirectory)../../tools/net35/OntologyDeployment.exe" />

  <Target Name="GenerateOntologies">
    <GenerateOntology ProjectPath="$(ProjectDir)/$(ProjectName)$(ProjectExt)" IntermediatePath="$(ProjectDir)/Ontologies/" />
  </Target>
  
  <Target Name="CilGeneratorTarget" AfterTargets="Build">
    <CilGeneratorTask TargetFile="$(TargetDir)/$(TargetName)$(TargetExt)" />
    <DeployOntology ProjectPath="$(ProjectDir)/$(ProjectName)$(ProjectExt)" />
  </Target>

</Project>